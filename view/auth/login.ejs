<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Login Page</title>
  <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="bg-slate-600" >
<!-- partial:index.partial.html -->
<div id="bg"></div>

<form action="/login" method="POST" class="bg-gray-lighter flex flex-col gap-5 justify-center items-center min-h-screen ">
  <div class="form-field">
    <input class="text-sm p-2 " type="email" placeholder="Email " name="email" required/>
  </div>
  
  <div class="form-field">
    <input class="text-sm p-2 " type="password" placeholder="Password" name="password" required/></div>
    
  <div class="form-field">
    <button class="mt-3 bg-blue-500 text-white w-20 h-8 rounded-md hover:bg-blue-600 active:bg-blue-700" type="submit">Log in</button>
  </div>

</form>
<!-- partial -->
<script>
  $(document).ready(function () {
    $("#show").click(function () {
      const email = $("#email").val();
      const password = $("#password").val();
      $(this).append(`<p>${email} ${password}</p>`);
    });
  });
</script>
  
</body>
</html>
